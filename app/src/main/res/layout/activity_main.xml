<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/darker_gray">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        android:layout_margin="10dp"
        android:columnCount="4"
        android:rowCount="9">

        <EditText
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_row="0"
            android:ems="10"
            android:focusable="false"
            android:cursorVisible="false"
            android:inputType="numberDecimal"
            android:gravity="right">
            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btnOne"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_gravity="top|left"
            android:layout_row="1"
            android:text="1"
            android:contentDescription="1"
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_gravity="top|left"
            android:layout_row="1"
            android:text="2"
            android:contentDescription="2"
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnThree"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_gravity="top|left"
            android:layout_row="1"
            android:text="3"
            android:contentDescription="3"
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_gravity="top|left"
            android:layout_row="1"
            android:text="+"
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnFour"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_gravity="top|left"
            android:layout_row="2"
            android:text="4"
            android:contentDescription="4"
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnFive"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_gravity="top|left"
            android:layout_row="2"
            android:text="5"
            android:contentDescription="5"
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnSix"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_gravity="top|left"
            android:layout_row="2"
            android:text="6"
            android:contentDescription="6"
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnSubstract"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_gravity="top|left"
            android:layout_row="2"
            android:text="-"
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_gravity="top|left"
            android:layout_row="3"
            android:text="7"
            android:contentDescription="7"
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnEight"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_gravity="top|left"
            android:layout_row="3"
            android:text="8"
            android:contentDescription="8"
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnNine"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_gravity="top|left"
            android:layout_row="3"
            android:text="9"
            android:contentDescription="9"
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_gravity="top|left"
            android:layout_row="3"
            android:text="*"
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnComma"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_gravity="top|left"
            android:layout_row="5"
            android:contentDescription="."
            android:text="."
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnZero"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_gravity="top|left"
            android:layout_row="5"
            android:text="0"
            android:contentDescription="0"
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnErase"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_gravity="top|left"
            android:layout_row="5"
            android:text="&lt;="
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_gravity="top|left"
            android:layout_row="5"
            android:text="/"
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="141dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_gravity="top|left"
            android:layout_row="6"
            android:layout_columnSpan="2"
            android:text="="
            android:onClick="buttonClick"
            android:background="?android:attr/selectableItemBackground"
            />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="141dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_gravity="top|left"
            android:layout_row="6"
            android:layout_columnSpan="2"
            android:text="C"
            android:onClick="buttonClick"
            android:background="@color/colorBtnClear"
            />

    </GridLayout>

</RelativeLayout>
